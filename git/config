[alias]
  ctags = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
[commit]
  verbose = true
[core]
  excludesfile = ~/.config/git/gitignore.global
[include]
  # separate file for username / email / etc
  path = ~/.config/git/config.local
[init]
  templatedir = ~/.config/git/templates
[merge]
  conflictstyle = diff3
